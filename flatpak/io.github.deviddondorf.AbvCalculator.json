{
  "id": "io.github.deviddondorf.AbvCalculator",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.7",
  "sdk": "org.kde.Sdk",
  "command": "abv-calculator",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--env=ABV_DATA=/app/share/abv-calculator"
  ],
  "modules": [
    {
      "name": "python-deps",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --prefix=/app -r requirements.txt"
      ],
      "sources": [
        { "type": "file", "path": "../src/requirements.txt" }
      ]
    },
    {
      "name": "abv-calculator",
      "buildsystem": "simple",
      "build-commands": [
    	"ls -R",
    	"install -Dm755 main-launcher.sh /app/bin/abv-calculator",
    	"mkdir -p /app/share/abv-calculator",
    	"cp -r main.py ui /app/share/abv-calculator/",
    	"install -Dm644 io.github.deviddondorf.AbvCalculator.desktop /app/share/applications/io.github.deviddondorf.AbvCalculator.desktop",
    	"install -Dm644 io.github.deviddondorf.AbvCalculator.metainfo.xml /app/share/metainfo/io.github.deviddondorf.AbvCalculator.metainfo.xml",
    	"install -Dm644 icons/hicolor/256x256/apps/io.github.deviddondorf.AbvCalculator.png /app/share/icons/hicolor/256x256/apps/io.github.deviddondorf.AbvCalculator.png"
	],
      "sources": [
        { "type": "dir", "path": "../src" },
        { "type": "file", "path": "main-launcher.sh" },
        { "type": "file", "path": "io.github.deviddondorf.AbvCalculator.desktop" },
        { "type": "file", "path": "io.github.deviddondorf.AbvCalculator.metainfo.xml" },
        { "type": "dir", "path": "icons" }
      ]
    }
  ]
}

