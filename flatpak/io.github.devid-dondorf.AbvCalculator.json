{
  "id": "io.github.devid-dondorf.AbvCalculator",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "abv-calculator",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland"
  ],
  "modules": [
    {
      "name": "abv-calculator",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 abv-calculator /app/bin/abv-calculator",
        "install -Dm644 ../flatpak/io.github.devid-dondorf.AbvCalculator.desktop /app/share/applications/io.github.devid-dondorf.AbvCalculator.desktop",
        "install -Dm644 ../flatpak/io.github.devid-dondorf.AbvCalculator.metainfo.xml /app/share/metainfo/io.github.devid-dondorf.AbvCalculator.metainfo.xml",
        "install -Dm644 ../flatpak/icons/hicolor/256x256/apps/io.github.devid-dondorf.AbvCalculator.png /app/share/icons/hicolor/256x256/apps/io.github.devid-dondorf.AbvCalculator.png"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "../src"
        }
      ]
    }
  ]
}

