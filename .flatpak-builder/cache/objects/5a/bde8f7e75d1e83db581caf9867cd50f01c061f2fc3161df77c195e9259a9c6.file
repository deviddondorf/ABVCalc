[Application]
name=io.github.deviddondorf.AbvCalculator
runtime=org.kde.Platform/x86_64/6.7
sdk=org.kde.Sdk/x86_64/6.7
command=abv-calculator

[Context]
shared=ipc;
sockets=x11;wayland;fallback-x11;
filesystems=xdg-config/kdeglobals:ro;

[Session Bus Policy]
com.canonical.AppMenu.Registrar=talk
org.kde.kconfig.notify=talk
org.kde.KGlobalSettings=talk

[Environment]
ABV_DATA=/app/share/abv-calculator
