{
  "app-id": "org.deviddondorf.ABVCalculator",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "abvcalculator",
  "modules": [
    {
      "name": "D-ABV Calculator",
      "buildsystem": "simple",
      "build-commands": [
        "install -D abvcalculator.py /app/bin/abvcalculator",
        "install -D ABVCalculator.ui /app/share/abvcalculator/ABVCalculator.ui",
        "mkdir -p /app/share/icons/hicolor/256x256/apps",
        "install -D icons/icon.png /app/share/icons/hicolor/256x256/apps/abvcalculator.png",
        "install -D -m 644 abvcalculator.desktop /app/share/applications/abvcalculator.desktop"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "../ABVCalculator"
        }
      ]
    },
    {
      "name": "python-deps",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --no-cache-dir -t /app/lib/python3.11/site-packages -r requirements.txt"
      ],
      "sources": [
        {
          "type": "file",
          "path": "../ABVCalculator/requirements.txt"
        }
      ]
    }
  ]
}

